{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "git-submodules": {
    "enabled": true
  },
  "automergeSchedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/test_typst_out_action\\.yml$"
      ],
      "matchStrings": [
        "matrix:\\s*\\n\\s*typst_ref:\\s*\\n\\s*-\\s*(?<currentValue>[a-f0-9]{40})\\s*# latest main"
      ],
      "datasourceTemplate": "github",
      "versioningTemplate": "digest",
      "depNameTemplate": "typst/typst"
    },
    {
      "fileMatch": [
        "^\\.github/workflows/test_typst_out_action\\.yml$"
      ],
      "matchStrings": [
        "matrix:\\s*\\n\\s*typst_ref:\\s*\\n(?:\\s*-[^\\n]*\\n)+\\s*-\\s*(?<currentValue>[\\w.-]+)\\s*# latest tag"
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver",
      "depNameTemplate": "typst/typst"
    }
  ],
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "{{#if isDigest}}digest{{else}}version{{/if}} to {{#if isDigest}}{{newDigest}}{{else}}{{newVersion}}{{/if}}"
}
